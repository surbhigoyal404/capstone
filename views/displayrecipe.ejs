<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<title>Recipe Collector</title>
	<link rel="icon" href="/images/logonew.png" type="image/icon type">
</head>
<body>
	<!-- content -->
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
	  <a class="navbar-brand" href="#">
	    <img src="/images/logonew.png" width="30" height="30" class="d-inline-block align-top" alt="">
	    RecipeCollector
	  </a>
	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
	    <span class="navbar-toggler-icon"></span>
	  </button>
	  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
	    <div class="navbar-nav">
	      <a class="nav-item nav-link" href="/">Home </a>
	      <a class="nav-item nav-link" href="/addrecipe">Submit a Recipe</a>
	      <a class="nav-item nav-link" href="/searchrecipes">Search Recipes </a>
	      <a class="nav-item nav-link" href="/aboutus">Contact Us</a>
	    </div>
	  </div>
	</nav>

	<div class="container my-5" style="text-align: center;">
		<div class="jumbotron">
		  <img class="card-img-top" src="/images/logonew.png" alt="RecipeCollector" style="height: 145px; width: 255px;">
		
		  <h3 class="mt-4"><%= recipe.title %></h3>

		  <div class="row my-2">
			<div class="col-12 col-sm-5">
			  <div class="card">
				<div class="card-body">
				  <span style="white-space: nowrap; color: rgb(62, 62, 172);">SERVES: <%= recipe.serves %></span>
				</div>
			  </div>
			</div>
			<div class="col-12 col-sm-5"style="margin-left: 175px;">
			  <div class="card">
				<div class="card-body">
				  <span style="white-space: nowrap; color: rgb(62, 62, 172);">TIME TO COOK: <%= recipe.timecount %> <%= recipe.timeunit %></span>
				</div>
			  </div>
			</div>
		  </div>
		  

		  <hr class="my-2">

		  <div style="text-align: left;">
			<span style="white-space: nowrap; color: blue;"><p class="lead">INGREDIENT:</p></span>
			
			<% count = 1 %>
			<% recipe.ingredient_phrases.forEach(function(ip){ %>
			  <%= count %>. <%= ip.count %> <%= ip.unit %> <%= ip.ingredient %> <%= ip.form %><br>
			  <% count = count + 1 %>
			<% }); %>

		  <hr class="my-3">

		  <span style="white-space: nowrap; color: blue;"><p class="lead" style="text-align: left;">INSTRUCTIONS:</p></span>

			<% count = 1 %>
			<% recipe.instructions.forEach(function(ins){ %>
			  <%= count %>. <%= ins.process %> <%= ins.ingredient %> <%= ins.utensil %> <%= ins.description %><br>
			  <% count = count + 1 %>
			<% }); %>

		  </div>

		</div>
	</div>
       <script>
	   function toCamelCase(str) {
		return str.replace(/[^a-zA-Z0-9]+(.)/g, (m, chr) => chr.toUpperCase());
	  }
	  </script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.21/lodash.min.js"></script>

	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>